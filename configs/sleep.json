{
  "build": "echo sleep {} > sleep.sh",
  "run": "bash ./sleep.sh",
  "clean": "",
  "args": [
    {
      "name": "duration",
      "format": {
        "cmd_line": "{val}"
      },
      "range": {
        "continuous": [0.0, 0.5]
      }
    },
    {
      "name": "env",
      "format": {
        "environment": "SOME_ENV"
      },
      "range": {
        "discrete": ["val1", "val2", "val3"]
      }
    }
  ]
}